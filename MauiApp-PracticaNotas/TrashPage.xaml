<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp_PracticaNotas"
             x:Class="MauiApp_PracticaNotas.TrashPage"
             Title="Papelera">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="#E74C3C" 
               Padding="20"
               CornerRadius="0"
               HasShadow="True">
            <VerticalStackLayout Spacing="5">
                <Label Text="ðŸ—‘ï¸ Papelera" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="Notas eliminadas" 
                       FontSize="12" 
                       TextColor="#ECF0F1"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de notas eliminadas -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="10">

                <CollectionView x:Name="DeletedNotesCollectionView" 
                                ItemsSource="{Binding}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,5" 
                                   Padding="15" 
                                   CornerRadius="8"
                                   BackgroundColor="#ECF0F1"
                                   BorderColor="#BDC3C7"
                                   HasShadow="True">

                                <Grid RowDefinitions="Auto,Auto,Auto">

                                    <!-- InformaciÃ³n de la nota -->
                                    <VerticalStackLayout Grid.Row="0" Spacing="5">
                                        <Label Text="{Binding Activity}" 
                                               FontSize="16"
                                               TextColor="#2C3E50"
                                               FontAttributes="Bold"/>

                                        <HorizontalStackLayout Spacing="10">
                                            <Label TextColor="#7F8C8D" FontSize="12">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="Prioridad: "/>
                                                        <Span Text="{Binding IsUrgent, Converter={local:UrgentTextConverter}}"
                                                              FontAttributes="Bold"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                            <BoxView WidthRequest="1" 
                                                     BackgroundColor="#95A5A6"
                                                     HeightRequest="15"
                                                     VerticalOptions="Center"/>

                                            <Label Text="{Binding CreatedDate, StringFormat='Creada: {0:dd/MM/yyyy HH:mm}'}" 
                                                   FontSize="10"
                                                   TextColor="#95A5A6"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Separador -->
                                    <BoxView Grid.Row="1" 
                                             HeightRequest="1" 
                                             BackgroundColor="#BDC3C7" 
                                             Margin="0,10"/>

                                    <!-- Botones de acciÃ³n -->
                                    <Grid Grid.Row="2" 
                                          ColumnDefinitions="*,*" 
                                          ColumnSpacing="10">

                                        <Button Grid.Column="0"
                                                Text="â™»ï¸ Recuperar"
                                                BackgroundColor="#27AE60"
                                                TextColor="White"
                                                CornerRadius="6"
                                                FontSize="12"
                                                Clicked="OnRestoreNoteClicked"
                                                CommandParameter="{Binding Id}"/>

                                        <Button Grid.Column="1"
                                                Text="âŒ Eliminar"
                                                BackgroundColor="#E74C3C"
                                                TextColor="White"
                                                CornerRadius="6"
                                                FontSize="12"
                                                Clicked="OnDeletePermanentlyClicked"
                                                CommandParameter="{Binding Id}"/>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label x:Name="EmptyLabel"
                       Text="ðŸ“­ No hay notas en la papelera"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="#95A5A6"
                       FontSize="16"
                       Margin="0,50"
                       IsVisible="False"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer con botÃ³n de vaciar papelera -->
        <Frame Grid.Row="2" 
               BackgroundColor="#34495E" 
               Padding="15"
               CornerRadius="0"
               HasShadow="True">
            <Button x:Name="EmptyTrashButton"
                    Text="ðŸ—‘ï¸ Vaciar Papelera Completa"
                    BackgroundColor="#C0392B"
                    TextColor="White"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    Clicked="OnEmptyTrashClicked"
                    IsEnabled="False"/>
        </Frame>
    </Grid>
</ContentPage>
